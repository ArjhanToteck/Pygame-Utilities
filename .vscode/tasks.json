{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-shared",
                "-fdiagnostics-color=always",
                "-g",
                "-fPIC",
                "-I/usr/include/python3.10/",
                "${file}",
                "-L/path/to/python3.10/lib",
                "-lpython3.10",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.so"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
